@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<h1>Add a New Client</h1>
<h3>Hooray, a new client! Who are they and who will be their stylist?</h3>

@if (ViewBag.StylistCount == 0)
{
  <p>Oh, whoops! We need to hire a stylist before we can get accept a new client.</p>
}
else
{
  @using (@Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name);
    @Html.TextBoxFor(model => model.Name);
    <br>
    @Html.LabelFor(model => model.HairColor);
    @Html.TextBoxFor(model => model.HairColor);
    <br>
    @Html.DropDownList("StylistId");
    <br>
    <input type="submit" value="Hire new client" class="btn btn-default" />
  }
}
<p>@Html.ActionLink("Back to list of stylists", "Index", "Stylists")</p>