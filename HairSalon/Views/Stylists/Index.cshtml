@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>List of Stylists</h1>

<h3>Here are all of our amazing stylist!</h3>

@if (Model.Count == 0)
{
  <p>...Oh wait, I guess we don't have any. We need to hire some fast!</p>
}

<ul>
@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink(stylist.Name, "Details", new { id = stylist.StylistId })</li>
}
</ul>

<p>@Html.ActionLink("Add a stylist", "Create")</p>
