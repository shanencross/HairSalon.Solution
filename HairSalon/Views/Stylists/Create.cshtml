@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<h1>Hire a New Stylist</h1>
<h3>How exciting, a new stylist to hire! Tell us some information about them.</h3>

@using (@Html.BeginForm())
{
  @Html.LabelFor(model => model.Name);
  @Html.TextBoxFor(model => model.Name);
  <br>
  @Html.LabelFor(model => model.Specialty);
  @Html.TextBoxFor(model => model.Specialty);
  <br>
  <input type="submit" value="Hire new stylist" class="btn btn-default" />
}
<p>@Html.ActionLink("Back to list of stylists", "Index")</p>